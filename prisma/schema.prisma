generator client {
    provider   = "prisma-client-js"
    engineType = "client"
}

datasource db {
    provider = "mysql"
}

model User {
    id       String    @id @default(cuid())
    email    String    @unique
    password String
    projects Project[]
}

model Project {
    id          String @id @default(cuid())
    name        String
    description String
    ownerId     String
    owner       User   @relation(fields: [ownerId], references: [id])
    tasks       Task[]
}

model Task {
    id          String   @id @default(cuid())
    title       String
    description String
    project     Project? @relation(fields: [projectId], references: [id])
    projectId   String?
}
